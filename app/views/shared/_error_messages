<% if var.errors.any? %>
  <div id="error_explanation">
    <h4>
      <%= pluralize(var.errors.count, "error") %>
      prohibited this form from being saved
    </h4>
    <ul>
      <% var.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
