<table border = "1", align = "center">
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Description</th>
    <th>Date</th>
  </tr>
  <% @blogs.each do |blog|%>
    <tr>
      <td><%= blog.user.email %></td>
      <td><%= blog.title %></td>
      <td><%= truncate(blog.description, size: 30) %></td>
      <td><%= blog.created_at %></td>
    </tr>
  <% end %>
</table>
<br>
<p>
  Select user to view his blog:
  <%= collection_select(:blog, :user_id, User.all, :id, :email)%>
</p>
<p>
  <div id="pop">
    <table border = "1", id = "pop-data">
    </table>
  </div>
</p>


