<table border = "1" align = "center">
  <tr>
    <th colspan = "3">Title</th>
    <% if current_user.admin? %>
      <th colspan = "3">status</th>
    <% end %>
  </tr>
  <% @blogs.each do |blog| %>
    <tr>
      <td colspan = "3"><%= blog.title %></td>
      <% if current_user.admin? %>
        <td colspan = "3"><%= blog.status %></td>
      <% end %>
      <td><%= link_to 'View', blog %></td>
    </tr>
  <% end %>
</table>
