<div>
  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>
  <%= form_for([blog,comment]) do |f| %>
    <%= render 'shared/error_messages', resource: comment%>
    <fieldset>
      <legend>Enter Comment Below</legend>
      <div class="field">
        <%= f.label :post, 'Post:' %>
        <%= f.text_area :post %>
      </div>
      <div class="field">
        <%= f.fields_for :tag do |tag_form| %>
          <%= tag_form.label :values, 'Tags:' %>
          <%= tag_form.text_area :values %>
        <% end %>
      </div>
      <div>
        <%= f.submit "Add Comment" %>
      </div>
    </fieldset>
  <% end %>
</div>
